<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/watermark_frame"
  android:layout_width="match_parent"
  android:layout_height="match_parent" >

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize">

      <ImageButton
        android:id="@android:id/home"
        style="?attr/borderlessButtonStyle"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="?attr/homeAsUpIndicator" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:isScrollContainer="false"
      android:fillViewport="true">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingHorizontal="@dimen/padding_large"
          android:gravity="center"
          android:text="@string/exposure_about_title"
          android:textAppearance="?attr/textAppearanceHeadline4" />

        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingHorizontal="@dimen/padding_large"
          android:layout_marginTop="@dimen/padding_normal"
          android:text="@string/exposure_about_settings_button_pre_text"
          android:textAppearance="?attr/textAppearanceSubtitle1" />

        <Button
          android:id="@+id/exposure_about_settings_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/padding_normal"
          android:text="@string/exposure_about_settings_button_text"
          style="@style/Widget.MaterialComponents.Button.TextButton" />

        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:paddingHorizontal="@dimen/padding_large"
          android:layout_marginBottom="@dimen/padding_normal"
          android:text="@string/exposure_about_detail"
          android:textAppearance="?attr/textAppearanceSubtitle1" />

      </LinearLayout>

    </androidx.core.widget.NestedScrollView>

  </LinearLayout>

</FrameLayout>
